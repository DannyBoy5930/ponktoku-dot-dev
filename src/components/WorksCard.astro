---
import { cn } from "@/lib/utils";

type Props = {
  index: number;
  title: string;
  description: string;
  showLinkSvg?: boolean;
  url: string;
  workBadge?: string;
  image?: string;
  className?: string;
};

const {
  index,
  title,
  description,
  showLinkSvg,
  url,
  workBadge,
  image,
  className,
} = Astro.props;
---

<a href={url} class="group flex gap-2 border-b py-5 dark:border-ak-black-300">
  <div class="text-lg font-thin">{index}.</div>
  <div>
    <span class={cn("text-xl font-bold", className)}>{title}</span>
    {
      showLinkSvg && (
        <span class={cn("inline-block w-[0.9em]", className)}>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="100%"
            height="100%"
            viewBox="0 0 16 16"
          >
            <path
              fill="currentColor"
              d="M3.75 2h3.5a.75.75 0 0 1 0 1.5h-3.5a.25.25 0 0 0-.25.25v8.5c0 .138.112.25.25.25h8.5a.25.25 0 0 0 .25-.25v-3.5a.75.75 0 0 1 1.5 0v3.5A1.75 1.75 0 0 1 12.25 14h-8.5A1.75 1.75 0 0 1 2 12.25v-8.5C2 2.784 2.784 2 3.75 2m6.854-1h4.146a.25.25 0 0 1 .25.25v4.146a.25.25 0 0 1-.427.177L13.03 4.03L9.28 7.78a.751.751 0 0 1-1.042-.018a.751.751 0 0 1-.018-1.042l3.75-3.75l-1.543-1.543A.25.25 0 0 1 10.604 1"
            />
          </svg>
        </span>
      )
    }

    <span
      class={cn(
        "block text-sm dark:text-white md:inline md:text-base",
        className,
      )}
    >
      {description}
      <span
        class={cn(
          "inline-block whitespace-nowrap bg-teal-500 px-2 text-sm text-black md:inline md:text-base",
          workBadge === "open-source" && "bg-green-400",
          workBadge === "client project" && "bg-purple-400",
          workBadge === "personal project" && "bg-yellow-300",
          workBadge === "uni project" && "bg-red-400",
        )}
      >
        [{workBadge}]
      </span>
    </span>
  </div>
</a>
